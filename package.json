{
  "name": "code-capture",
  "displayName": "Code Capture",
  "description": "ðŸ“¸ Beautiful screenshots for your code",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/UncleClapton/code-capture.git"
  },
  "publisher": "UncleClapton",
  "keywords": [
    "CodeCapture",
    "polacode",
    "polaroid",
    "screenshot",
    "snippet",
    "share"
  ],
  "galleryBanner": {
    "color": "#fbfbfb",
    "theme": "light"
  },
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.45.1"
  },
  "activationEvents": [
    "onCommand:codeCapture.activate",
    "onWebviewPanel:codeCapture"
  ],
  "main": "./src/extension",
  "contributes": {
    "commands": [
      {
        "command": "codeCapture.activate",
        "title": "ðŸ“¸ Code Capture"
      }
    ],
    "configuration": {
      "title": "Code Capture",
      "properties": {
        "codeCapture.background": {
          "type": "string",
          "scope": "resource",
          "markdownDescription": "Background color of the snippet's container. Can be any valid value of the CSS property `background`.",
          "default": "transparent"
        },
        "codeCapture.shadow": {
          "type": "string",
          "scope": "resource",
          "markdownDescription": "Shadow of the snippet node. Can be any valid value of the CSS property `box-shadow`. Ignored if `#codeCapture.target#` is `snippet`.",
          "default": "0 0 8px rgba(0,0,0,.18), 0 8px 16px rgba(0,0,0,.36)"
        },
        "codeCapture.padding": {
          "type": "number",
          "scope": "resource",
          "markdownDescription": "amount of space reserved around the snippet. Ignored if `#codeCapture.target#` is `snippet`.",
          "default": 16,
          "minimum": 0
        },
        "codeCapture.target": {
          "type": "string",
          "scope": "resource",
          "description": "Shoot with or without container.",
          "default": "container",
          "enum": [
            "container",
            "snippet"
          ],
          "markdownEnumDescriptions": [
            "Shoot the snippet with padding for `#codeCapture.shadow#`.",
            "Shoot the snippet on it's own."
          ]
        },
        "codeCapture.defaultPath": {
          "type": [
            "string",
            "null"
          ],
          "scope": "machine",
          "description": "Default save location for snippets.",
          "default": null
        },
        "codeCapture.windowTitle": {
          "type": "boolean",
          "scope": "resource",
          "description": "Display a title at the top of the snippet. Can be overridden by clicking the top of the snippet preview.",
          "default": false
        },
        "codeCapture.autoSave": {
          "type": "boolean",
          "scope": "resource",
          "description": "Automatically save snippet instead of displaying save dialog.",
          "default": false
        },
        "codeCapture.closeOnSave": {
          "type": "boolean",
          "scope": "resource",
          "description": "Close panel after saving a snippet.",
          "default": true
        },
        "codeCapture.closeOnSaveDelay": {
          "type": "number",
          "scope": "resource",
          "markdownDescription": "Time (in miliseconds) before the capture window closes. Only applies when `#codeCapture.closeOnSave#` is `true`.",
          "default": 1250,
          "minimum": 250
        }
      }
    }
  },
  "devDependencies": {
    "@fuelrats/eslint-config": "^2.2.0-canary.1",
    "@types/node": "^14.0.6",
    "@types/vscode": "^1.45.1",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^26.0.1"
  },
  "dependencies": {
    "dom-to-image-even-more": "^1.0.4",
    "vivus": "^0.4.5"
  }
}
