{
  "name": "polacode-automated",
  "displayName": "Polacode Automated",
  "description": "ðŸ“¸  Automated polaroid for your code",
  "version": "0.4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/UncleClapton/polacode.git"
  },
  "publisher": "UncleClapton",
  "keywords": [
    "polacode",
    "polaroid",
    "screenshot",
    "snippet",
    "share"
  ],
  "galleryBanner": {
    "color": "#fbfbfb",
    "theme": "light"
  },
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.32.0"
  },
  "activationEvents": [
    "onCommand:polacode.activate",
    "onWebviewPanel:polacode"
  ],
  "main": "./src/extension",
  "contributes": {
    "commands": [
      {
        "command": "polacode.activate",
        "title": "Polacode ðŸ“¸"
      }
    ],
    "configuration": {
      "title": "Polacode",
      "properties": {
        "polacode.shadow": {
          "type": "string",
          "markdownDescription": "Shadow of the snippet node. Use any value for CSS `box-shadow`",
          "default": "rgba(0, 0, 0, 0.55) 0px 20px 64px"
        },
        "polacode.transparentBackground": {
          "type": "boolean",
          "description": "Transparent background for containers.",
          "default": false
        },
        "polacode.backgroundColor": {
          "type": "string",
          "markdownDescription": "Background color of snippet container. Use any value for CSS `background-color`.",
          "format": "color-hex",
          "default": "#f2f2f2"
        },
        "polacode.target": {
          "type": "string",
          "description": "Shoot with or without container.",
          "default": "container",
          "enum": [
            "container",
            "snippet"
          ],
          "enumDescriptions": [
            "Shoot with the container.",
            "Shoot the snippet alone. If you want transparent padding, use `container` with `\"polacode.transparentBackground\": true`."
          ]
        },
        "polacode.defaultPath": {
          "type": [
            "string",
            "null"
          ],
          "description": "Default save location for snippets.",
          "default": null
        },
        "polacode.autoSave": {
          "type": "boolean",
          "description": "Automatically save snippet instead of displaying save dialog.",
          "default": false
        },
        "polacode.closeOnSave": {
          "type": "boolean",
          "description": "Close panel after saving a snippet.",
          "default": true
        },
        "polacode.closeOnSaveDelay": {
          "type": "number",
          "markdownDescription": "Time (in miliseconds) before the Polacode window closes. Only applies when `#polacode.closeOnSave#` is set to `true`.",
          "default": 1250,
          "minimum": 250
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^14.0.6",
    "@types/vscode": "^1.45.1"
  }
}
